<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuo.gitproject.mapper.mysqlxinyin.userandpower.UserMapper">

  <select id="findByUsername" resultType="com.tuo.gitproject.entity.xtsz.User">
    SELECT
    *
    FROM t_usr
    where
      username = #{username}
  </select>
</mapper>